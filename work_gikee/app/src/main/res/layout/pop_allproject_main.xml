<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="260dp"
    android:layout_height="match_parent"
    android:background="@color/white">

    <TextView
        android:id="@+id/pop_allproject_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/dp_10"
        android:paddingLeft="@dimen/dp_10"
        android:paddingTop="85dp"
        android:text="行业领域"
        android:textColor="@color/gray_33"
        android:textSize="@dimen/sp_top" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/pop_allproject_recycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pop_allproject_title"
        android:layout_marginLeft="@dimen/dp_5"
        android:layout_marginRight="@dimen/dp_5">

    </android.support.v7.widget.RecyclerView>

    <TextView
        android:id="@+id/pop_allproject_rechose"
        android:layout_width="100dp"
        android:layout_height="36dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"
        android:layout_marginLeft="@dimen/dp_10"
        android:background="@color/gray_ed"
        android:text="重置"
        android:gravity="center"
        android:textColor="@color/gray_33"
        android:textSize="@dimen/sp_title" />

    <TextView
        android:id="@+id/pop_allproject_sure"
        android:layout_width="100dp"
        android:layout_height="36dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"
        android:layout_marginLeft="10dp"
        android:gravity="center"
        android:layout_toRightOf="@+id/pop_allproject_rechose"
        android:background="@color/appcolors"
        android:text="确认"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_title" />

</RelativeLayout>