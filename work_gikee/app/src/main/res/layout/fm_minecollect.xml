<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/gray_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_top"
        android:background="@color/white">

        <!--<ImageView-->
            <!--android:id="@+id/mineproject_search"-->
            <!--android:layout_width="@dimen/dp_toolbar"-->
            <!--android:layout_height="50dp"-->
            <!--android:layout_alignParentBottom="true"-->
            <!--android:layout_alignParentRight="true"-->
            <!--android:padding="@dimen/dp_15"-->
            <!--android:scaleType="fitCenter"-->
            <!--android:src="@mipmap/add_black" />-->

        <com.gikee.app.views.IconView
            android:id="@+id/mineproject_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_alignParentRight="true"
            android:padding="@dimen/dp_15"
            android:textSize="15sp"
            android:textColor="@color/F5C"
            android:text="&#xe605;"/>

        <RadioGroup
            android:id="@+id/collect_rg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal"
            >

            <RadioButton
                android:id="@+id/project"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:gravity="center_horizontal"
                android:text="@string/title_mineproject"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:button="@null"
                android:background="@drawable/sharp_btn_project"
                />
            <RadioButton

                android:id="@+id/address"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:textColor="@color/gray_33"
                android:gravity="center_horizontal"
                android:text="@string/address"
                android:textSize="14sp"
                android:button="@null"
                android:background="@drawable/sharp_btn_rightline"

                />


        </RadioGroup>

    </RelativeLayout>


    <android.support.v4.view.ViewPager
        android:id="@+id/collect_vp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="75dp"
        android:background="@color/gray_bg"
        >
    </android.support.v4.view.ViewPager>


</RelativeLayout>