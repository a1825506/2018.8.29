<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/search_layout"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        >


    <RelativeLayout
        android:id="@+id/search_context_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="5dp"
        >

        <com.gikee.app.views.EditTextWithDel
            android:id="@+id/search_searchtx"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/shape_btn_gray_bg"
            android:gravity="left|center_vertical"
            android:hint="@string/search_special_context"
            android:layout_toRightOf="@+id/back"
            android:focusable="false"

            android:focusableInTouchMode="false"
            android:layout_centerVertical="true"
            android:imeActionLabel="搜索"
            android:imeOptions="actionSearch"
            android:paddingRight="10dp"
            android:layout_marginLeft="@dimen/dp_15"
            android:inputType="text"
            android:textSize="@dimen/sp_11"
            android:lines="1"
            android:textColor="@color/gray_33"
            android:textColorHint="@color/home_navite" />

    </RelativeLayout>

    </RelativeLayout>

    <View
        android:id="@+id/line1"
        android:background="@color/line_biew"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_below="@+id/search_layout"
        />
    <RelativeLayout
        android:id="@+id/my_monitor_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_10"
        android:layout_below="@+id/line1"
        android:gravity="center_vertical"
        android:background="@color/white"

        >

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/my_account_logo"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:background="@mipmap/my_account"
            android:layout_centerVertical="true"

            />

        <LinearLayout
            android:id="@+id/my_account_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/my_account_logo"
            android:layout_marginLeft="@dimen/dp_12"
            >
            <com.gikee.app.views.MyBoldTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/my_address"
                android:textColor="@color/black"
                android:textSize="15sp"

                />
            <TextView
                android:id="@+id/monitor_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/monitor_address"
                android:textSize="@dimen/sp_11"
                />
        </LinearLayout>

        <TextView
            android:id="@+id/collect_count"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_20"
            android:layout_centerVertical="true"
            android:background="@drawable/corner_view"
            android:text="1"
            android:textSize="@dimen/sp_11"
            android:textColor="@color/white"
            android:gravity="center"
            >
        </TextView>

    </RelativeLayout>

    <View
        android:id="@+id/line2"
        android:background="@color/line_biew"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_below="@+id/my_monitor_layout"
        />
    <LinearLayout
        android:id="@+id/add_account_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/dp_10"
        android:layout_below="@+id/line2"
        android:gravity="center_vertical"
        android:background="@color/white"

        >

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:background="@mipmap/add_address_gray"

            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/dp_12"
            >
            <com.gikee.app.views.MyBoldTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/addaddress"
                android:textColor="@color/gray_c7"
                android:textSize="15sp"

                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/account_type"
                android:textSize="@dimen/sp_11"
                android:textColor="@color/gray_c7"
                />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/develop"
            android:gravity="right"
            android:textSize="@dimen/sp_11"
            android:textColor="@color/gray_c7"
            />

    </LinearLayout>


    <View
        android:id="@+id/line3"
        android:background="@color/line_biew"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_below="@+id/add_account_layout"
        />
    <LinearLayout
        android:id="@+id/upload_account_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/dp_10"
        android:layout_below="@+id/line3"
        android:gravity="center_vertical"
        android:background="@color/white"

        >

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:background="@mipmap/updown_address_gray"

            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/dp_12"
            >
            <com.gikee.app.views.MyBoldTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/upload_account"
                android:textColor="@color/gray_c7"
                android:textSize="15sp"

                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/upload_account_title"
                android:textSize="@dimen/sp_11"
                android:textColor="@color/gray_c7"
                />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/develop"
            android:gravity="right"
            android:textSize="@dimen/sp_11"
            android:textColor="@color/gray_c7"
            />

    </LinearLayout>

    <View
        android:id="@+id/line4"
        android:background="@color/line_biew"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_below="@+id/upload_account_layout"
        />


    <TextView
        android:id="@+id/special_account_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_12"
        android:text="@string/specialtrade"
        android:layout_below="@+id/line4"
        />

     <com.lcodecore.tkrefreshlayout.TwinklingRefreshLayout
    android:id="@+id/refreshLayout"
    android:layout_below="@+id/special_account_title"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/all_account_recycle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/special_account_title"
        >
    </android.support.v7.widget.RecyclerView>

     </com.lcodecore.tkrefreshlayout.TwinklingRefreshLayout>





</RelativeLayout>