<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_bg">

    <include layout="@layout/view_titlebar" />

    <RelativeLayout
        android:id="@+id/contact_headlayout"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_marginTop="75dp"
        android:visibility="gone"
        android:background="@color/white">

        <ImageView
            android:id="@+id/contact_headimg"
            android:layout_width="82dp"
            android:layout_height="82dp"
            android:layout_centerInParent="true" />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_below="@+id/contact_headlayout"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dp_12"
        android:paddingRight="@dimen/dp_12"
        android:text="@string/wechat_public"
        android:textColor="@color/gray_33"
        android:textSize="@dimen/sp_title" />

    <TextView
        android:id="@+id/contact_wechat"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/contact_headlayout"
        android:layout_marginRight="12dp"
        android:gravity="right|center_vertical"
        android:text="GIKEE盖客"
        android:textColor="@color/gray_c7"
        android:textSize="@dimen/sp_13" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_below="@+id/contact_wechat"
        android:layout_marginTop="1dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dp_12"
        android:paddingRight="@dimen/dp_12"
        android:text="@string/wechat_qq"
        android:textColor="@color/gray_33"
        android:textSize="@dimen/sp_title" />

    <TextView
        android:id="@+id/contact_weibo"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/contact_wechat"
        android:layout_marginRight="12dp"
        android:layout_marginTop="1dp"
        android:gravity="right|center_vertical"
        android:text="827336503"
        android:textColor="@color/gray_c7"
        android:textSize="@dimen/sp_13" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_below="@+id/contact_weibo"
        android:layout_marginTop="1dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dp_12"
        android:paddingRight="@dimen/dp_12"
        android:text="@string/mine_contact_email"
        android:textColor="@color/gray_33"
        android:textSize="@dimen/sp_title" />

    <TextView
        android:id="@+id/contact_email"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/contact_weibo"
        android:layout_marginRight="12dp"
        android:layout_marginTop="1dp"
        android:gravity="right|center_vertical"
        android:text="contact@gikee.com"
        android:textColor="@color/gray_c7"
        android:textSize="@dimen/sp_13" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_below="@+id/contact_email"
        android:layout_marginTop="1dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dp_12"
        android:paddingRight="@dimen/dp_12"

        android:text="@string/mine_contact_facebook"
        android:textColor="@color/gray_33"
        android:textSize="@dimen/sp_title" />

    <TextView
        android:id="@+id/contact_weib"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/contact_email"
        android:layout_marginRight="12dp"
        android:layout_marginTop="1dp"
        android:gravity="right|center_vertical"

        android:text="gikeecom"
        android:textColor="@color/gray_c7"
        android:textSize="@dimen/sp_13" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_below="@+id/contact_email"
        android:layout_marginTop="1dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dp_12"
        android:paddingRight="@dimen/dp_12"

        android:text="@string/mine_contact_weibo"
        android:textColor="@color/gray_33"
        android:textSize="@dimen/sp_title" />

    <TextView
        android:id="@+id/contact_facebook"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/contact_email"
        android:layout_marginRight="12dp"
        android:layout_marginTop="1dp"
        android:gravity="right|center_vertical"

        android:text="Gikee_盖客"
        android:textColor="@color/gray_c7"
        android:textSize="@dimen/sp_13" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_below="@+id/contact_facebook"
        android:layout_marginTop="1dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dp_12"
        android:paddingRight="@dimen/dp_12"

        android:text="@string/twitter"
        android:textColor="@color/gray_33"
        android:textSize="@dimen/sp_title" />

    <TextView
        android:id="@+id/twitter"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/contact_facebook"
        android:layout_marginRight="12dp"
        android:layout_marginTop="1dp"
        android:gravity="right|center_vertical"

        android:text="Gikee_Offical"
        android:textColor="@color/gray_c7"
        android:textSize="@dimen/sp_13" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_below="@+id/twitter"
        android:layout_marginTop="1dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dp_12"
        android:paddingRight="@dimen/dp_12"

        android:text="@string/dianbao"
        android:textColor="@color/gray_33"
        android:textSize="@dimen/sp_title" />

    <TextView
        android:id="@+id/dianbao"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/twitter"
        android:layout_marginRight="12dp"
        android:layout_marginTop="1dp"
        android:gravity="right|center_vertical"

        android:text="https://t.me/Gikee_CN"
        android:textColor="@color/gray_c7"
        android:textSize="@dimen/sp_13" />


</RelativeLayout>