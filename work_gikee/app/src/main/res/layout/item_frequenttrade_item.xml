<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/specialaddress_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="@dimen/dp_10"
    android:layout_marginBottom="2dp"
    android:background="@drawable/mine_headimg_5"
    >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingTop="8dp"
        android:paddingBottom="@dimen/dp_5"
        >

        <View
            android:id="@+id/item_img"
            android:layout_width="2dp"
            android:layout_height="14dp"
            android:layout_marginTop="2dp"
            android:background="@color/ffc35f"
            />

        <TextView
            android:id="@+id/item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/yestaday"
            android:textStyle="bold"
            android:layout_toRightOf="@+id/item_img"
            android:layout_marginLeft="@dimen/dp_10"
            android:textSize="13sp"
            android:textColor="@color/gray_33"
            />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            >
            <TextView
                android:layout_marginLeft="@dimen/dp_5"
                android:id="@+id/addrss_tiem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray_33"
                android:singleLine="true"
                android:maxEms="6"
                android:ellipsize="middle"
                android:layout_centerVertical="true"
                android:text="06-21 09:22:22"
                android:textSize="@dimen/sp_12"
                />

            <TextView
                android:id="@+id/addrss_flag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray_33"
                android:textSize="@dimen/sp_12"
                android:text="Binance"
                android:layout_toRightOf="@+id/addrss_tiem"
                android:background="@drawable/shape_btn_blue"
                android:layout_marginLeft="15dp"
                />

        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/special_timelayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="@dimen/dp_5"
        >

        <TextView
            android:layout_marginLeft="@dimen/dp_5"
            android:id="@+id/addrss_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="@color/mineproject"
            android:text="06-21 09:22:22"
            android:textSize="@dimen/sp_12"
            />

        <TextView
            android:layout_marginLeft="@dimen/dp_5"
            android:id="@+id/addrss_name_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gray_33"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:text="8,472 ETH"
            android:textSize="@dimen/sp_12"
            />

    </RelativeLayout>

    <View
        android:layout_height="0.5dp"
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:background="@color/gray_line"

        />



</LinearLayout>