<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/alpha_bg">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="102dp"
        android:layout_alignParentBottom="true"
        android:background="@color/gray_bg">

        <Button
            android:id="@+id/dialog_exit_cancel"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/dp_1"
            android:background="@color/white"
            android:text="@string/dg_choseico_cancel"
            android:textColor="@color/gray_c7"
            android:textSize="@dimen/sp_title" />

        <Button
            android:id="@+id/dialog_exit_exit"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_above="@+id/dialog_chose_unit_cancel"
            android:layout_marginBottom="@dimen/dp_1"
            android:background="@color/white"
            android:text="@string/dg_exit_sure"
            android:textColor="@color/gray_33"
            android:textSize="@dimen/sp_title" />

    </RelativeLayout>
</RelativeLayout>