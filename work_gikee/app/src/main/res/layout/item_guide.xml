<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    >
    <ImageView
        android:id="@+id/view_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@mipmap/gikee_01"
        />
    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginTop="65dp"
        android:textSize="24sp"
        android:textColor="@color/black"
        />

    <TextView
        android:id="@+id/context"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_below="@+id/title"
        android:layout_marginTop="15dp"
        android:visibility="gone"
        android:textSize="15sp"
        android:textColor="@color/welcome_title_item"
        android:text="@string/guide_title2"
        />

    <LinearLayout
        android:id="@+id/logo_layout"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginTop="210dp"
        android:layout_below="@+id/context"
        android:orientation="vertical"
        android:visibility="gone"
        android:gravity="center_horizontal"

        >

        <ImageView
            android:id="@+id/app_logo"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:src="@mipmap/logo"
            />

        <TextView
            android:id="@+id/app_logo_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:textSize="16sp"
            android:textColor="@color/welcome_logo_title"
            android:text="@string/guide_title5"
            />


    </LinearLayout>




</RelativeLayout>