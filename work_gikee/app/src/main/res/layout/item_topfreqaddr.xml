<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/specialaddress_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginBottom="2dp"
    android:background="@drawable/mine_headimg_5"
    >



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingTop="@dimen/dp_15"
        android:paddingBottom="@dimen/dp_15"
        >

        <TextView
            android:layout_marginLeft="@dimen/dp_5"
            android:id="@+id/freqaddr_rank"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gray_33"
            android:layout_centerVertical="true"
            android:textSize="@dimen/sp_11"
            />

        <TextView
            android:id="@+id/freqaddr_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/freqaddr_rank"
            android:maxEms="6"
            android:singleLine="true"
            android:ellipsize="middle"
            android:layout_marginLeft="20dp"
            android:text="3Nxwenay9Z8Lc9JBiywExpnEFiLp6Afp8v"
            android:layout_centerVertical="true"
            android:textColor="@color/Blue"
            android:textSize="@dimen/sp_12"
            />

        <TextView
            android:id="@+id/addrss_flag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gray_33"
            android:textSize="@dimen/sp_12"
            android:visibility="gone"
            android:text="Binance"
            android:layout_toRightOf="@+id/freqaddr_address"
            android:background="@drawable/shape_btn_blue"
            android:layout_marginLeft="15dp"
            />

        <TextView
            android:layout_marginLeft="@dimen/dp_5"
            android:id="@+id/freqaddr_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gray_33"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:text="8,472 ETH"
            android:textSize="@dimen/sp_12"
            />

    </RelativeLayout>

    <View
        android:layout_height="0.5dp"
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:background="@color/gray_line"

        />

</LinearLayout>