<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/item_homepage_two_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:background="@mipmap/all_shuju_type3"
        android:orientation="vertical"
        android:padding="@dimen/dp_10">

        <TextView
            android:id="@+id/item_homepage_two_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:drawableLeft="@mipmap/all_shuju_chibi"
            android:drawablePadding="@dimen/dp_5"
            android:textColor="@color/gray_86"
            android:textSize="@dimen/sp_11" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="@dimen/dp_15"
            android:textColor="@color/gray_33"
            android:layout_gravity="right"
            android:textSize="@dimen/sp_10"
            android:text=""
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/find_type2_line"
            android:layout_gravity="right"
            android:layout_marginRight="@dimen/dp_15"
            />

        <com.github.mikephil.charting.charts.PieChart
            android:id="@+id/item_homepage_two_piechart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

        </com.github.mikephil.charting.charts.PieChart>
    </LinearLayout>

</RelativeLayout>