<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_bg">

    <RelativeLayout
        android:id="@+id/mine_headerlayout"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@color/white">

        <ImageView
            android:id="@+id/mine_more"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginBottom="50dp"
            android:visibility="gone"
            android:src="@mipmap/icon_right" />

        <ImageView
            android:id="@+id/mine_headimg"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/dp_24"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginTop="25dp"
            android:background="@drawable/mine_headimg_5"
            android:padding="@dimen/dp_5"
            android:src="@mipmap/notlogin" />

        <TextView
            android:id="@+id/mine_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:textStyle="bold"
            android:layout_marginBottom="45dp"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_toRightOf="@+id/mine_headimg"
            android:text="@string/login_registered"
            android:textColor="@color/gray_33"
            android:textSize="@dimen/sp_16" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/mine_content_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginTop="@dimen/dp_10"
        android:paddingLeft="@dimen/dp_12"
        android:layout_below="@+id/mine_headerlayout"
        android:background="@color/white">



        <TextView
            android:id="@+id/mine_warning"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:layout_marginRight="@dimen/dp_12"
            android:gravity="start|center_vertical"
            android:text="@string/mine_warning"
            android:textColor="@color/gray_33"
            android:textSize="@dimen/sp_14" />

        <ImageView
            android:id="@+id/mine_warning_receive_check"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:gravity="start|center_vertical"
            android:layout_alignParentRight="true"
            android:paddingLeft="@dimen/dp_12"
            android:paddingRight="@dimen/dp_12"
            android:src="@mipmap/check_box_green" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@+id/mine_warning"
            android:layout_marginRight="@dimen/dp_10"
            android:background="@color/line_biew" />



        <TextView
            android:id="@+id/mine_quate"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:layout_marginRight="@dimen/dp_12"
            android:gravity="start|center_vertical"
            android:layout_below="@+id/mine_warning"
            android:text="@string/mine_quate"
            android:textColor="@color/gray_33"
            android:textSize="@dimen/sp_14" />

        <ImageView
            android:id="@+id/mine_quate_receive_check"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:gravity="start|center_vertical"
            android:layout_below="@+id/mine_warning"

            android:layout_alignParentRight="true"
            android:paddingLeft="@dimen/dp_12"
            android:paddingRight="@dimen/dp_12"
            android:src="@mipmap/check_box_gray" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@+id/mine_quate"
            android:layout_marginRight="@dimen/dp_10"
            android:background="@color/line_biew" />



        <TextView
            android:id="@+id/mine_unit"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_below="@+id/mine_quate"
            android:layout_marginRight="@dimen/dp_12"
            android:drawableRight="@mipmap/icon_right"
            android:gravity="start|center_vertical"
            android:textColor="@color/gray_33"
            android:text="@string/price_unit"
            android:textSize="@dimen/sp_title" />

        <TextView
            android:id="@+id/mine_unit_resource"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/mine_quate"
            android:layout_marginRight="34dp"
            android:gravity="center_vertical"
            android:text="@string/dg_chose_unit_china_des"
            android:textColor="@color/gray_c7"
            android:textSize="@dimen/sp_13" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_below="@+id/mine_unit"
            android:background="@color/line_biew" />


        <TextView
            android:id="@+id/mine_language"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_below="@+id/mine_unit"
            android:layout_marginRight="@dimen/dp_12"
            android:drawableRight="@mipmap/icon_right"
            android:gravity="start|center_vertical"
            android:text="@string/mine_language"
            android:textColor="@color/gray_33"
            android:textSize="@dimen/sp_title" />

        <TextView
            android:id="@+id/mine_language_resource"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/mine_unit"
            android:layout_marginRight="34dp"
            android:gravity="center_vertical"
            android:text="@string/dg_chose_language_chana"
            android:textColor="@color/gray_c7"
            android:textSize="@dimen/sp_13" />



    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mine_content_layout"
        android:layout_marginTop="@dimen/dp_10"
        android:paddingLeft="@dimen/dp_10"
        android:background="@color/white">


        <TextView
            android:id="@+id/mine_telephone"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginRight="@dimen/dp_12"
            android:drawableRight="@mipmap/icon_right"
            android:gravity="start|center_vertical"
            android:text="@string/mine_telephone"
            android:textColor="@color/gray_33"
            android:textSize="@dimen/sp_title" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@+id/mine_telephone"
            android:layout_marginRight="@dimen/dp_10"
            android:background="@color/line_biew" />



        <TextView
            android:id="@+id/mine_share"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_below="@+id/mine_telephone"
            android:layout_marginRight="@dimen/dp_12"
            android:drawableRight="@mipmap/icon_right"
            android:gravity="start|center_vertical"
            android:text="@string/mine_share"
            android:textColor="@color/gray_33"
            android:textSize="@dimen/sp_title" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@+id/mine_share"
            android:layout_marginRight="@dimen/dp_10"
            android:background="@color/line_biew" />

        <ImageView
            android:id="@+id/mine_edition_des"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:layout_below="@+id/mine_share"
            android:layout_marginLeft="@dimen/dp_12"
            android:padding="@dimen/dp_12"
            android:visibility="gone"
            android:src="@mipmap/mine_edition" />

        <TextView
            android:id="@+id/mine_edition"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_below="@+id/mine_share"
            android:layout_toRightOf="@+id/mine_edition_des"
            android:layout_marginRight="@dimen/dp_12"
            android:drawableRight="@mipmap/icon_right"
            android:gravity="start|center_vertical"
            android:text="@string/mine_edition"
            android:textColor="@color/gray_33"
            android:textSize="@dimen/sp_title" />

        <TextView
            android:id="@+id/mine_edition_resource"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/mine_share"
            android:layout_marginRight="34dp"
            android:gravity="center_vertical"
            android:textColor="@color/gray_c7"
            android:textSize="@dimen/sp_13" />

    </RelativeLayout>

</RelativeLayout>