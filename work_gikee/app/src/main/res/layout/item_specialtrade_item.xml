<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/specialaddress_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginLeft="@dimen/dp_5"
    android:layout_marginRight="@dimen/dp_5"
    android:layout_marginBottom="2dp"
    android:background="@drawable/mine_headimg_5"
    >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingTop="8dp"
        android:paddingBottom="@dimen/dp_5"
        >


        <View
            android:id="@+id/item_img"
            android:layout_width="2dp"
            android:layout_height="14dp"
            android:layout_marginTop="2dp"
            android:background="@color/ffc35f"
            />

        <TextView
            android:id="@+id/item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/yestaday"
            android:textStyle="bold"
            android:layout_toRightOf="@+id/item_img"
            android:layout_marginLeft="@dimen/dp_10"
            android:textSize="13sp"
            android:textColor="@color/gray_33"
            />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_title"
            android:layout_alignParentRight="true"
            >

            <TextView
                android:id="@+id/addrss_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray_33"
                android:layout_marginLeft="@dimen/dp_10"
                android:text="0x0000000000000"
                android:textSize="@dimen/sp_12"
                />


            <TextView
                android:id="@+id/exchange_from"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_12"
                android:text="Binance"
                android:layout_toRightOf="@+id/addrss_name"
                android:background="@drawable/shape_btn_blue"
                android:layout_marginLeft="5dp"
                />


            <com.gikee.app.views.IconView
                android:id="@+id/addrss_img"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_toRightOf="@+id/exchange_from"
                android:layout_marginLeft="@dimen/dp_10"
                android:textSize="8sp"
                android:textColor="@color/home_navite"
                android:text="&#xe60f;"/>

            <!--<ImageView-->
                <!--android:id="@+id/addrss_img"-->
                <!--android:layout_width="10dp"-->
                <!--android:layout_height="10dp"-->
                <!--android:layout_marginTop="@dimen/dp_5"-->
                <!--android:layout_toRightOf="@+id/exchange_from"-->
                <!--android:background="@mipmap/roll_out_gray"-->
                <!--android:layout_marginLeft="@dimen/dp_10"-->
                <!--/>-->

            <TextView
                android:id="@+id/addrss_name_to"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray_33"
                android:text="0x0000000000000"
                android:layout_toRightOf="@+id/addrss_img"
                android:textSize="@dimen/sp_12"
                android:layout_marginLeft="@dimen/dp_10"
                />

            <TextView
                android:id="@+id/addrss_send"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray_33"
                android:layout_marginLeft="@dimen/dp_10"
                android:text="0x0000000000000"
                android:visibility="gone"
                android:textSize="@dimen/sp_12"
                />

            <TextView
                android:id="@+id/exchange_to"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_12"
                android:text="Binance"
                android:layout_toRightOf="@+id/addrss_name_to"
                android:background="@drawable/shape_btn_blue"
                android:layout_marginLeft="5dp"
                />

        </RelativeLayout>

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/special_timelayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="@dimen/dp_5"
        >

        <TextView
            android:layout_marginLeft="@dimen/dp_5"
            android:id="@+id/addrss_tiem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/mineproject"
            android:layout_centerVertical="true"
            android:textSize="@dimen/sp_12"
            />

        <TextView
            android:layout_marginLeft="@dimen/dp_5"
            android:id="@+id/addrss_name_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gray_33"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:text="8,472 ETH"
            android:textSize="@dimen/sp_14"
            />

    </RelativeLayout>

    <View
        android:layout_height="0.5dp"
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:background="@color/gray_line"

        />

</LinearLayout>