<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/trade_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:layout_marginRight="@dimen/dp_15"
    android:paddingTop="14dp"
    >

    <TextView
        android:id="@+id/addrss_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/gray_33"
        android:maxLines="1"
        android:layout_centerVertical="true"
        android:maxEms="3"
        android:text="0x0000000000000"
        android:ellipsize="end"
        android:textSize="@dimen/sp_12"
        />

    <TextView
        android:id="@+id/addrss_flag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:layout_centerVertical="true"
        android:textSize="@dimen/sp_12"
        android:text="Binance"
        android:background="@drawable/shape_btn_blue"
        android:layout_marginLeft="50dp"
        />

    <ImageView
        android:id="@+id/addrss_img"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/addrss_flag"
        android:background="@mipmap/roll_out_gray"
        android:layout_marginLeft="@dimen/dp_10"
        />

    <TextView
        android:id="@+id/addrss_name_to"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/gray_33"
        android:maxLines="1"
        android:maxEms="3"
        android:layout_centerVertical="true"
        android:text="0x0000000000000"
        android:layout_toRightOf="@+id/addrss_img"
        android:ellipsize="end"
        android:textSize="@dimen/sp_12"
        android:layout_marginLeft="@dimen/dp_10"
        />

    <TextView
        android:layout_marginLeft="@dimen/dp_5"
        android:id="@+id/addrss_name_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/gray_33"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:text="8,472 ETH"
        android:textSize="@dimen/sp_12"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="14dp"
        android:layout_below="@id/addrss_flag"
        android:background="@color/line_biew"
        />

</RelativeLayout>