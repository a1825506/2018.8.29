<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/baseline_layout"
    android:padding="@dimen/dp_12"
    android:layout_marginRight="@dimen/dp_15"
    android:layout_width="wrap_content"
    android:background="@drawable/item_pressed"
    android:gravity="center"
    android:layout_height="wrap_content">

    <!--<LinearLayout-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:background="@drawable/shape_btn_circleimage"-->
        <!--android:gravity="center_vertical"-->
        <!--android:id="@+id/baseline_img_layout"-->
        <!--&gt;-->
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/baseline_img"
            android:layout_width="26dp"
            android:layout_height="26dp"
            />
    <!--</LinearLayout>-->

    <com.gikee.app.views.MyTextView
        android:id="@+id/baseline_symbol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_toRightOf="@+id/baseline_img"
        android:layout_marginLeft="10dp"
        android:textSize="@dimen/sp_14"
        />

    <com.gikee.app.views.MyBoldTextView
        android:id="@+id/baseline_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/baseline_symbol"
        android:layout_marginTop="@dimen/dp_15"
        android:textSize="@dimen/sp_16"
        />
    <com.gikee.app.views.MyTextView
        android:id="@+id/baseline_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/baseline_value"
        android:textSize="@dimen/sp_11"
        android:layout_marginTop="2dp"
        android:textColor="@color/gray_33"

        />

    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/baseline_linechat"
        android:layout_width="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/baseline_name"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/base_img"
        android:layout_width="80dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/baseline_name"
        android:background="@mipmap/eosshuju"
        android:layout_height="50dp" />



</RelativeLayout>