<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/all_shuju_today_add_linechart_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingBottom="15dp">

        <TextView
            android:id="@+id/all_shuju_today_add_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:paddingTop="12dp"
            android:text="2018-6-16"
            android:textColor="@color/appcolors"
            android:textSize="@dimen/sp_content" />

        <ImageView
            android:id="@+id/all_shuju_today_add_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:padding="@dimen/dp_10"
            android:src="@mipmap/todayadd_info" />

        <com.gikee.app.views.MyLineChart
            android:id="@+id/all_shuju_today_add_linechart"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@+id/all_shuju_today_add_data"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10">

        </com.gikee.app.views.MyLineChart>

        <RelativeLayout
            android:id="@+id/all_shuju_today_add_today"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_below="@+id/all_shuju_today_add_linechart"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_toLeftOf="@+id/all_shuju_today_add_yestoday"
            android:background="@color/appcolors">

            <TextView
                android:id="@+id/all_shuju_today_add_today_tx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:drawableLeft="@mipmap/todayadd_tip_white"
                android:drawablePadding="@dimen/dp_5"
                android:text="@string/today"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_msg" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/all_shuju_today_add_yestoday"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_below="@+id/all_shuju_today_add_linechart"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@drawable/btn_gray_white_top_bttom">

            <TextView
                android:id="@+id/all_shuju_today_add_yestoday_tx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:drawableLeft="@mipmap/todayadd_tip_green"
                android:drawablePadding="@dimen/dp_5"
                android:text="@string/yestaday"
                android:textColor="@color/gray_33"
                android:textSize="@dimen/sp_msg" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/all_shuju_today_add_weeky"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_below="@+id/all_shuju_today_add_linechart"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_toRightOf="@+id/all_shuju_today_add_yestoday"
            android:background="@drawable/btn_gray_white">

            <TextView
                android:id="@+id/all_shuju_today_add_weeky_tx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:drawableLeft="@mipmap/todayadd_tip_orange"
                android:drawablePadding="@dimen/dp_5"
                android:text="上周同期"
                android:textColor="@color/gray_33"
                android:textSize="@dimen/sp_msg" />
        </RelativeLayout>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/all_shuju_today_add_center"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_below="@+id/all_shuju_today_add_linechart_layout"
        android:background="@color/gray_bg"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/all_shuju_today_add_title1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/gray_33"
            android:textSize="@dimen/sp_msg" />

        <TextView
            android:id="@+id/all_shuju_today_add_title2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/gray_33"
            android:textSize="@dimen/sp_msg" />

        <TextView
            android:id="@+id/all_shuju_today_add_title3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/gray_33"
            android:textSize="@dimen/sp_msg" />
    </LinearLayout>

</RelativeLayout>