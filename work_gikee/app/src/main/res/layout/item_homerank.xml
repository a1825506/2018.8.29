<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rank_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dp_15"
    >

    <TextView
        android:id="@+id/rank"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@color/title_color"
        android:layout_centerVertical="true"
        />

    <LinearLayout
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:background="@drawable/shape_btn_circleimage"
        android:layout_centerVertical="true"
        android:id="@+id/hot_img_layout"
        android:gravity="center"
        android:layout_marginLeft="30dp"
        android:layout_toRightOf="@+id/rank"
        >
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/rank_img"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@mipmap/hot"
            />
    </LinearLayout>


    <com.gikee.app.views.MyTextView
        android:id="@+id/rank_symbol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:layout_centerVertical="true"
        android:text="@string/close"
        android:layout_toRightOf="@+id/hot_img_layout"
        android:layout_marginLeft="15dp"
        android:textColor="@color/hot_project_title"
        />

    <com.gikee.app.views.MyBoldTextView
        android:id="@+id/rank_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:text="@string/close"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="12dp"
        android:layout_marginLeft="15dp"
        android:textColor="@color/hot_project_title"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/f8f9f9"
        android:layout_below="@+id/hot_img_layout"
        android:layout_marginTop="@dimen/dp_15"
        />

</RelativeLayout>