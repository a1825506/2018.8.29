<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rank_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/item_pressed"
    android:paddingLeft="@dimen/dp_5"
    android:paddingRight="@dimen/dp_5"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ranklin_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        android:layout_gravity="center_vertical"
        android:background="@drawable/item_pressed"

        >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            android:gravity="center_horizontal"
            android:layout_gravity="center_vertical"
            android:visibility="gone"
            android:orientation="horizontal"
            >


            <com.gikee.app.views.MyTextView
                android:id="@+id/title_context"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textSize="@dimen/sp_11" />
        </LinearLayout>




        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_gravity="center_vertical"

            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <LinearLayout
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:orientation="horizontal"
                    android:background="@drawable/shape_btn_circleimage"

                    >
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/ranking_img"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:visibility="gone"
                        android:layout_gravity="center_vertical"
                        />

                </LinearLayout>

                <com.gikee.app.views.MyTextView
                    android:id="@+id/title2_context"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:textStyle="bold"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/gray_33"
                    android:textSize="@dimen/sp_14" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/market_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/textcolor"

                    android:textSize="10sp" />

                <com.gikee.app.views.MyTextView
                    android:id="@+id/market_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:textColor="@color/textcolor"
                    android:text="$630.75äº¿"
                    android:textSize="@dimen/sp_10" />
            </LinearLayout>

        </LinearLayout>



    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.4"
        android:orientation="vertical"
        android:layout_gravity="center_vertical"
        >
        <com.gikee.app.views.MyBoldTextView
            android:id="@+id/title3_context"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:gravity="right"
            android:layout_marginRight="@dimen/dp_15"

            android:textColor="@color/gray_33"
            android:textSize="@dimen/sp_16" />
        <com.gikee.app.views.MyTextView
            android:id="@+id/price_btc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:textStyle="bold"
            android:layout_marginRight="@dimen/dp_15"
            android:textColor="@color/textcolor"
            android:textSize="@dimen/sp_10" />
    </LinearLayout>





        <com.gikee.app.views.MyBoldTextView
            android:id="@+id/title4_context"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="12.76%"
            android:textColor="@color/white"
            android:background="@drawable/shape_btn_newaccount"
            android:textSize="15sp" />

    </LinearLayout>



    <View
        android:layout_height="0.5dp"
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_below="@+id/ranklin_layout"
        android:background="@color/gray_line"
        android:layout_marginTop="8dp"
        />

</RelativeLayout>